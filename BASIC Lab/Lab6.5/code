#include <stdio.h>
#include <string.h>

#define MAXSIZE 100 

int count_vowels_with_pointer( char *str ) ;

int main() {

    char sentence[ MAXSIZE] ;
    int vowel_count = 0 ;
    //char *char_ptr ;

    printf( "Enter a sentense: " ) ;
    if( fgets( sentence, MAXSIZE, stdin ) == NULL ) {
        return 1 ;
    }//end if

    sentence[ strcspn( sentence, "\n" ) ] = '\0' ;

    char *char_ptr = sentence ;

    vowel_count = count_vowels_with_pointer( char_ptr ) ;

    printf( "\n---STRING ANALYSIS RERORT---\n" ) ;
    printf( "Input String: \"%s\"\n", sentence ) ;
    printf( "Total Vowel Count: %d\n", vowel_count ) ;

    return 0 ;
}//end function

int count_vowels_with_pointer( char *str ) {
    int countV, i = 0 ;

    while( *(str + i) != '\0' ) {
        if( *(str + i) =='a' || *(str + i) == 'e' || *(str + i) == 'i' || *(str + i) == 'o' || *(str + i) == 'u' || 
            *(str + i) == 'A' || *(str + i) == 'E' || *(str + i) == 'I' || *(str + i) == 'O'|| *(str + i) == 'U' ) {
            countV++ ;
        }//end if
        i++ ;
    }//end while

    return countV ;
}//end function
