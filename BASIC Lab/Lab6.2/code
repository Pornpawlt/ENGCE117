#include <stdio.h>

void swapValues( int *a, int *b ) ;

int main() {

    int num1 = 0, num2 = 0 ;

    printf( "Enter Value for Num1: " ) ;
    if( scanf( "%d", &num1 ) != 1 ) {
        return 1 ;
    }//end if

    printf( "Enter Value for Num2: " ) ;
    if( scanf( "%d", &num2 ) != 1 ) {
        return 1 ;
    }//end if

    printf( "\n---SWAPPING REPORT---\n" ) ;
    printf( "Before Swap - Num1: %d, Num2: %d\n", num1, num2 ) ;

    swapValues( &num1, &num2 ) ;

    printf( "After Swap - Num1: %d, Num2: %d\n", num1, num2 ) ; //Display2

    return 0 ;
}//end fucntion

void swapValues( int *a, int *b ) {
    int temp = 0 ;
    
    temp = *a ;
    *a = *b ;
    *b = temp ;

    printf( "*a = %d *b = %d\n", *a, *b ) ; //Display 1

}//end function
