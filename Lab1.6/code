#include <stdio.h>
#include <stdlib.h>

int *GetMat(int *row, int *col);

int main() {
    int *data;
    int m, n;

    data = GetMat(&m, &n);
    if (data == NULL) {
        printf("Memory allocation failed or invalid input.\n");
        return 1;
    }

    printf("--------\n");
    for (int i = 0; i < m; i++) {
        for (int a = 0; a < n; a++) {
            printf("%d ", data[i * n + a]);
        }
        printf("\n");
    }

    free(data);
    return 0;
}

int *GetMat(int *row, int *col) {
    int *arr;
    int i, a;

    printf("Enter Rows and Column: ");
    scanf("%d %d", row, col) ;

    arr = (int*) malloc(*row * (*col) * sizeof(int));

    printf("Enter %d integers:\n", *row * *col);
    for (i = 0; i < *row; i++) {
        for (a = 0; a < *col; a++) {
            scanf("%d", &arr[i * (*col) + a]) ;
        }
    }

    return arr;
}
